@model ShoppingCartVM
<link rel="stylesheet" href="~/css/disableSpinners.css" />
<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-dark bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Shopping Cart
                    </h5>
                </div>

            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
            </div>
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a asp-area="customer" asp-controller="home" asp-action="index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                </div>
                <div class="col-md-10 offset-md-1">
                    @foreach (var companyGroup in Model.ShoppingCartList.GroupBy(r => r.Company.Name).ToList())
                    {
                        <div class="card bg-secondary mb-3">
                            <div class="card-header"><i class="bi bi-shop me-3"></i>@companyGroup.Key</div>
                            <ul class="card-body list-group list-group-flush">
                                @foreach (var shoppingCartItem in companyGroup)
                                {
                                <li class="list-group-item">
                                    <div class="row pb-1">
                                        <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                            <img src="@shoppingCartItem.Product.ImageURL" class="rounded" width="100%" />
                                        </div>
                                        <div class="col-12 col-lg-5 pt-md-3">
                                            <h5 class="text-uppercase text-secondary"><strong>@shoppingCartItem.Product.Title</strong></h5>
                                            @*<p><small>@Html.Raw(shoppingCartItem.Product.Description)</small></p>*@
                                            <p><small>Unit Price: @shoppingCartItem.Price.ToString("c")</small></p>
                                            
                                        </div>
                                        <div class="col-12  col-lg-6 text-center row">
                                                <div class="col-4 text-md-right pt-2 pt-md-4">
                                                <h5 class="fw-bold text-warning">
                                                        @((shoppingCartItem.Price*shoppingCartItem.Count).ToString("c"))
                                                </h5>
                                            </div>
                                                <div class="col-5 col-sm-4 col-lg-5 pt-2">
                                                    <div class="w-75 btn-group" role="group">
                                                        <a asp-action="minus" asp-route-cartId="@shoppingCartItem.Id" class="btn btn-outline-dark bg-gradient py-2" style="font-size: 25px;">
                                                            -
                                                        </a>
                                                        <div class="align-self-center">
                                                            <span class="p-2 fw-bold">@shoppingCartItem.Count</span>
                                                        </div>
                                                        <a asp-action="plus" asp-route-cartId="@shoppingCartItem.Id" class="btn btn-outline-dark bg-gradient py-2" style="font-size: 25px;">
                                                            +
                                                        </a>
                                                    </div>

                                                </div>
                                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                                    <a asp-action="remove" asp-route-cartId="@shoppingCartItem.Id" class="btn btn-danger bg-gradient text-white btn-outline-dark py-2 ">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                </li>
                                }
                            </ul>
                        </div>
                    }
                </div>

            </div>
            <div class="card-footer bg-white border-0">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold text-uppercase"> Total (USD)</h5>
                                <h4 class="text-dark fw-bolder">@Model.OrderHeader.OrderTotal.ToString("c")</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        @if(Model.ShoppingCartList.Count() > 0)
                        {
                        <a asp-action="Summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Summary</a>
                        }else
                        {
                        <a asp-area="customer" asp-controller="home" asp-action="index" class="btn btn-primary border-0 bg-gradient w-100 py-2" >Start Shopping</a>
                        }
                    </div>
                </div>
            </div>
        </div>
</form>
